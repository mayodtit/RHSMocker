              <% if @user %>
                <li style="padding: 10px;"><span><%= @user.full_name %></span></li>
                <li><%= link_to "Logout", "/logout"%></li>
              <% else %>
                <li><%= link_to "Login", "/login"%></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div> 

    <div class="container">
        <div class="row">
          <div class="span12" style="padding-top:50px;">
            <%= bootstrap_flash %>
            <%= yield %>
