
<div class="content_cardview">

	<div class="content_type_and_sender">
		<%= image_tag("message_icn@2x.png", :class => "top_icon") %>
 		<span style="display:inline-block;margin-top:3px;">
 			Message
 		</span>
	</div>
	<div class="content_title">
		<%= @message.title %>
	</div>
	<div class="content_date_and_source">
		<% if !@message.created_at.nil? %>
			<%= @message.created_at.strftime("%b. #{@message.created_at.day.ordinalize}, %Y") %>
		<% end %>
		<div class="content_text_preview">
			<%= @message.previewText.html_safe%>
		</div>
	</div>
</div>
