.content_full
  .content_source
    - unless %w(Question Quiz Message).include?(content.content_type)
      = image_tag('mayo_clinic_logo.png', :class => 'mayo_icon')
  .content_header
    .content_title_full= content.title.html_safe
    .content_abstract= content.abstract.html_safe if content.abstract.present?
  .content_text= content.body.html_safe if content.body.present?
  - unless content == Content.mayo_terms_of_service
    .mayo-copyright.content-link{:data => {:content_id => Content.mayo_terms_of_service.try(:id)}}
      &copy;2013&nbsp;Mayo Foundation for Medical Education and Research (MFMER).<br>All rights reserved.
  - if content.show_call_option?
    .talk{:data => {:content_id => content.id, :message => "I was reading the article '#{content.title}' and would like to discuss it with a Personal Health Assistant."}}
      Discuss this with a Personal Health Assistant

-# TODO - use the below until the client supports the "open_content" hook
- if Content.mayo_terms_of_service
  :javascript
    window.mayo_terms_of_service_url = "#{j content_url(Content.mayo_terms_of_service)}"
