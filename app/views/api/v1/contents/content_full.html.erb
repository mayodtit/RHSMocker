<div class="content_full">
	<div class="content_type_and_sender"><%= @content.contentsType %></div>
	<div class="content_title"><%= @content.title %></div>
	<div class="content_date_and_source">
		<% if !@content.updateDate.nil? %>
			<%= @content.updateDate.strftime("%b. #{@content.updateDate.day.ordinalize}, %Y") %>&nbsp;&nbsp;|&nbsp;&nbsp;
		<% end %><%= image_tag ("mayo_clinic_logo.png")%>&nbsp;&nbsp;Mayo Clinic</div>
		<% if !@content.abstract.nil? %>
			<div class="content_subtitle"><%= @content.abstract.html_safe%></div>
		<% end %>
		<div class="content_subtitle"><% if !@content.question.nil? %><%= @content.question%><% end %></div>
		<div class="content_text"><% if !@content.body.nil? %><%=@content.body.html_safe%><% end %></div>
	</div>
</div>