.content_cardview
  .content_type_and_sender
    = image_tag "message_icn@2x.png", :class => "top_icon"
    %span{:style => "display: inline-block; margin-top: 3px;"} Message
  .content_title
    = consult.most_recent_message.title.html_safe
  .content_date_and_source
    = consult.most_recent_message.created_at.strftime("%b. #{consult.most_recent_message.created_at.day.ordinalize}, %Y")
  .content_text_preview
    = consult.most_recent_message.preview.html_safe
