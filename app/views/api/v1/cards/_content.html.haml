- if Metadata.new_card_design?
  - if resource.card_template == :full_body
    .content-card.card-link{:data => {:card_id => card.try(:id)}}
      .header
        .type= resource.content_type_display.html_safe
        = image_tag('mayologo_card_@2x.png', class: %w(logo mayo-logo)) if resource.show_mayo_logo?
      .title.small= resource.title.html_safe
      .body= resource.raw_body.html_safe
      .about
  - if resource.card_template == :abstract
    .content-card.card-link{:data => {:card_id => card.try(:id)}}
      .header
        .type= resource.content_type_display.html_safe
        = image_tag('mayologo_card_@2x.png', class: %w(logo mayo-logo)) if resource.show_mayo_logo?
      .title= resource.title.html_safe
      .abstract= resource.card_abstract.html_safe
      .about
  - else
    .content-card.card-link{:data => {:card_id => card.try(:id)}}
      .header
        .type= resource.content_type_display.html_safe
        = image_tag('mayologo_card_@2x.png', class: %w(logo mayo-logo)) if resource.show_mayo_logo?
      .title= resource.title.html_safe
      .about
- else
  .old
    .content_card
      - if resource.has_custom_card?
        = resource.raw_preview.html_safe
      - else
        .content_source
          = image_tag('mayologo_card_@2x.png', :class => 'mayo_icon') if resource.show_mayo_logo?
        .content_header_card
          .content_title_card= resource.title.html_safe
          .content_text_card_fade= resource.raw_preview.html_safe
