<h1>Content Browser</h1>

<%= paginate @contents, :window => 30 %>
<%= page_entries_info @contents %>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="contentList">
  <thead>
  <tr>
    <th>Title</th>
    <th>MCVID</th>
    <th>Type</th>
    <th>Abstract</th>
  </tr>
</thead>
<tbody>
<% @contents.each do |content| %>
  <tr>
    <td><%= link_to content.title, content %></td>
    <td><%= content.mayo_doc_id %></td>
    <td><%= content.content_type %></td>
    <% if content.abstract.nil? %>
      <td> </td>
    <% else %>
      <td><%= content.abstract.html_safe %></td>
    <% end %>
  </tr>
<% end %>
<tbody>
</table>

<%= paginate @contents, :window => 30 %>
<%= page_entries_info @contents %>

<br />

