<div class="content_cardview">
	
<div class="content_type_and_sender">
	<div style="float:left;">
		<%= image_tag ("inbox_icn.png") %>
	</div>
	<span style="display:inline-block;margin-top:3px;"><%= @content.content_type %></span>
</div>


<div class="content_title"><%= @content.title %></div>
<div class="content_date_and_source">
	<% if !@content.content_updated_at.nil? %>
		<%= @content.content_updated_at.strftime("%b. #{@content.content_updated_at.day.ordinalize}, %Y") %>&nbsp;&nbsp;|&nbsp;&nbsp;
	<% end %>Mayo Clinic</div>

<% if !@content.previewText.nil? %>
	<div class="content_subtitle"><%= @content.previewText.html_safe%></div>
<% end %>
</div>
