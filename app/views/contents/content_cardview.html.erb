<div class="content_cardview">
	
<div class="content_type_and_sender">
	<div style="float:left;">
		<%= image_tag ("inbox_icn.png") %>
	</div>
	<span style="display:inline-block;margin-top:3px;"><%= @content.contentsType %></span>
</div>


<div class="content_title"><%= @content.title %></div>
<div class="content_date_and_source"><%= @content.updateDate.strftime("%b. #{@content.updateDate.day.ordinalize}, %Y") %>&nbsp;&nbsp;|&nbsp;&nbsp;Mayo Clinic</div>

<% if !@content.previewText.nil? %>
	<div class="content_subtitle"><%= @content.previewText.html_safe%></div>
<% end %>
</div>