<div class="content_full">
<div class="content_type_and_sender"><%= @content.content_type %></div>
<div class="content_title"><%= @content.title %></div>
<div class="content_date_and_source">
<% if !@content.content_updated_at.nil? %>
<%= @content.content_updated_at.strftime("%b. #{@content.content_updated_at.day.ordinalize}, %Y") %>&nbsp;&nbsp;|&nbsp;&nbsp;
<% end %><%= image_tag("mayo_clinic_logo.png", :class => "mayo_icon")%>&nbsp;&nbsp;Mayo Clinic
</div>
<% if not ["Disease", "Test Procedure", "Answer"].include?(@content.content_type) %>
<% if !@content.abstract.nil? %>
<div class="content_subtitle"><%= @content.abstract.html_safe%></div>
<% end %>
<% end %>
<!-- <% if ["Answer"].include?(@content.content_type) %>
<div class="content_subtitle"><% if !@content.question.nil? %><%= @content.question%><% end %></div>
<% end %> -->
<% if not ["Quiz", "Question"].include?(@content.content_type) %>
<div class="content_text"><% if !@content.body.nil? %><%=@content.reformattedBody.html_safe%><% end %></div>
<% else %>
<div class="content_text"><% if !@content.body.nil? %><%=@content.body.html_safe%><% end %></div>
<% end %>
</div>
