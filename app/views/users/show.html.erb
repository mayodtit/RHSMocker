<p id="notice"><%= notice %></p>

<%= @user.firstName %>&nbsp;<%= @user.lastName %><br/>
<%= @user.install_id %>

<h3> Users Current Content List </h3>
<%= link_to 'Reset', reset_content_url(:id => @user.id) %>
<ul>
  <% @user.readContent.each do | readingItem | %>
  	<li> 
  	<%= @user.firstName %>
  	
  	<% if readingItem.read_date.nil? %>
  		&nbsp;has not read  <%= readingItem.content.headline %>

  
  	<% else %>
  		read <%= readingItem.content.headline %> on <%= readingItem.read_date %> 
  	<% end %>
  	
  </li>
  	<% end %>
</ul>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
