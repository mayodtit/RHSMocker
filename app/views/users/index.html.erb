<p><%= link_to 'New User', new_user_path %></p>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" >
  <tr>
    <th>(ID)</th>
    <th>Name</th>
    <th>Email</th>
    <th>Install ID</th>
    <th>Gender</th>
    <th>Birth Date</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td>
    <% if user.fullName.nil? %>
        <%= link_to 'Show', user %>
    <% else %>
        <%= link_to user.fullName, user %>
    <% end %>
        &nbsp;|&nbsp;<%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= user.email %></td>
    <td><%= user.install_id %></td>
    <td><%= user.gender %></td>
    <td><%= user.birthDate %></td>
  </tr>
<% end %>
</table>

